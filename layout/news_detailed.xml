<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:id="@+id/title_news_detailed"
            android:text="1111"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/author_headShot_news_detailed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/author_name_news_detailed"
                android:textSize="15sp"
                android:text="111"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_news_detailed"/>
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_news_detailed"

                android:text="11111111111111111111111111111111111111111111111111111111111111"
                android:textSize="20sp"/>

        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/like_news_detailed"
                android:background="@mipmap/like1"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/collection_news_detailed"
                android:background="@mipmap/collection1"
                android:layout_marginLeft="80dp"/>

            <Button
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:id="@+id/comment_news_detailed"
                android:layout_marginLeft="80dp"
                android:textColor="@color/colorPink"
                android:background="@mipmap/comment1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>