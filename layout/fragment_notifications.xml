<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/headshot"
            android:src="@mipmap/user_headshot2"/>
        <TextView
            android:paddingLeft="20dp"
            android:paddingVertical="10dp"
            android:text="昵称："
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/username_personal_fragment"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        android:id="@+id/resume_personal_fragment"
        android:text="个人简介："
        android:textColor="@color/colorBlack"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingVertical="10dp"
        android:text="性别："
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/gender"
        android:background="@color/colorWhite"/>
    <TextView
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingVertical="10dp"
        android:text="收藏文章数："
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/star_num"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorBlack"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:id="@+id/re_login"
    android:text="重新登录"
    android:textColor="@color/colorWhite"
    android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:background="@color/colorBlack"
        android:layout_height="50dp"
        android:id="@+id/changePassword_personal_fragment"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="修改密码"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>


</androidx.appcompat.widget.LinearLayoutCompat>